<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.bigeyessolution.CoquetelMudical" version="0.0.1">
    <name>Coquetel Musical</name>
    <description>
        
    </description>
    <author email="laudivan@bigeyessolution.com" href="http://www.bigeyessolution.com">
        Laudivan Freire de Almeida
    </author>
    <author email="azevedo@bigeyessolution.com" href="http://www.bigeyessolution.com">
        Washington Luiz Santos Azevedo
    </author>
    <content src="index.html"/>
    <preference name="orientation" value="portrait"/>
    <preference name="fullscreen" value="false"/> 
    <preference name="target-device" value="universal"/>
    <preference name="fullscreen" value="true"/>
    <preference name="prerendered-icon" value="true"/>
    <preference name="ios-statusbarstyle" value="black-opaque"/>
    <preference name="detect-data-types" value="true"/>
    <preference name="exit-on-suspend" value="false"/>
    <preference name="BackgroundColor" value="0xffffffff"/>
    <preference name="auto-hide-splash-screen" value="true"/>
    <icon src="icon.png"/>
    <splash src="splash.png"/>
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="org.apache.cordova.device-motion" version="0.2.10" />
    <gap:plugin name="org.apache.cordova.device-orientation" version="0.3.9" />
    <gap:plugin name="org.apache.cordova.file" version="1.3.1" />
    <gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
    <gap:plugin name="org.apache.cordova.media" version="0.2.13" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
    <gap:plugin name="org.apache.cordova.dialogs" version="0.2.10" />
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
