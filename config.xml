<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.bigeyessolution.CoquetelMudical" version="0.0.1">
    <name>Coquetel Musical</name>
    <description>
        
    </description>
    <author email="laudivan@bigeyessolution.com" href="http://www.bigeyessolution.com">
        Laudivan Freire de Almeida
    </author>
    <author email="azevedo@bigeyessolution.com" href="http://www.bigeyessolution.com">
        Washington Luiz Santos Azevedo
    </author>
    <content src="index.html"/>
    <preference name="orientation" value="portrait"/>
    <preference name="fullscreen" value="false"/> 
    <preference name="target-device" value="universal"/>
    <preference name="fullscreen" value="true"/>
    <preference name="prerendered-icon" value="true"/>
    <preference name="ios-statusbarstyle" value="black-opaque"/>
    <preference name="detect-data-types" value="true"/>
    <preference name="exit-on-suspend" value="false"/>
    <preference name="BackgroundColor" value="0x846F57ff"/>
    <preference name="auto-hide-splash-screen" value="true"/>
    <icon src="icon.png"/>
    <splash src="splash.png"/>
    <plugin name="org.apache.cordova.device"/>
    <plugin name="org.apache.cordova.device-motion"/>
    <plugin name="org.apache.cordova.device-orientation"/>
    <plugin name="org.apache.cordova.file"/>
    <plugin name="org.apache.cordova.geolocation"/>
    <plugin name="org.apache.cordova.media"/>
    <plugin name="org.apache.cordova.network-information"/>
    <plugin name="org.apache.cordova.dialogs"/>
    <plugin name="org.apache.cordova.splashscreen"/>
    <plugin name="cordova-plugin-whitelist"/>
    <access origin="http://127.0.0.1/*"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
